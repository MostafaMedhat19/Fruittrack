<Page x:Class="Fruittrack.ProductionReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="تقارير الإنتاج والتوزيع"
      FlowDirection="RightToLeft"
      FontFamily="Segoe UI"
      Background="#F8F9FA">

    <Page.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="8" ShadowDepth="1" Color="#08000000"/>

        <!-- Header Style -->
        <Style x:Key="DarkDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#6CB6FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5BA3F0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title with accent bar -->
            <Border Grid.Row="0" Background="#6CB6FF" CornerRadius="6" Padding="15" Margin="0,0,0,20"
                    BorderThickness="0" BorderBrush="Transparent"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle Width="5" Height="30" Fill="White" Margin="0,0,10,0" RadiusX="2" RadiusY="2"/>
                        <TextBlock Text="تقارير الإنتاج والتوزيع" 
                                   FontSize="24" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Path Data="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z" 
                              Fill="White" Width="28" Height="28" Margin="15,0,0,0"/>
                    </StackPanel>

                    <!-- Export Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="طباعة" 
                                Click="PrintButton_Click"
                                Background="#FF9800" Foreground="White"
                                Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                                MinWidth="100" Margin="5,0" Cursor="Hand"/>
                        <Button Content="PDF" 
                                Click="PdfButton_Click"
                                Background="#F44336" Foreground="White"
                                Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                                MinWidth="100" Margin="5,0" Cursor="Hand"/>
                        <Button Content="Excel" 
                                Click="ExcelButton_Click"
                                Background="#4CAF50" Foreground="White"
                                Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                                MinWidth="100" Margin="5,0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Summary Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Profit/Loss Card -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,5,0" 
                        Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                    <StackPanel>
                        <TextBlock Text="إجمالي الربح/الخسارة" FontWeight="SemiBold" FontSize="12" Foreground="#1F2937" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock x:Name="TotalProfitLossText" Text="0 جنيه" FontSize="20" FontWeight="Bold" 
                                   Foreground="#10B981" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Best Supplier Card -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="5,0,5,0" 
                        Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                    <StackPanel>
                        <TextBlock Text="أعلى مورد ربحاً" FontWeight="SemiBold" FontSize="12" Foreground="#1F2937" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock x:Name="BestSupplierText" Text="غير محدد" FontSize="16" FontWeight="Bold" 
                                   Foreground="#F59E0B" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        <TextBlock x:Name="BestSupplierProfitText" Text="0 جنيه" FontSize="12" 
                                   Foreground="#6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Placeholder for future KPI -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15" Margin="5,0,0,0" 
                        Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                    <StackPanel>
                        <TextBlock Text="مؤشر" FontWeight="SemiBold" FontSize="12" Foreground="#1F2937" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock x:Name="IndicatorText" Text="0%" FontSize="20" FontWeight="Bold" 
                                   Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Filters Card -->
            <Border Grid.Row="2" Background="White" CornerRadius="6" 
                    BorderThickness="1" BorderBrush="#E5E7EB" Padding="15" Margin="0,0,0,15"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Date Filters -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="من تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="#1F2937" FontSize="14"/>
                        <DatePicker x:Name="FromDatePicker" Width="140" Height="30" 
                                   Background="White" BorderBrush="#D1D5DB" Foreground="#1F2937" 
                                   BorderThickness="1" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <TextBlock Text="إلى تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="#1F2937" FontSize="14"/>
                        <DatePicker x:Name="ToDatePicker" Width="140" Height="30" 
                                   Background="White" BorderBrush="#D1D5DB" Foreground="#1F2937" 
                                   BorderThickness="1" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Farm Filter -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="المزرعة:" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="#1F2937" FontSize="14"/>
                        <ComboBox x:Name="FarmFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}" IsEditable="True"/>
                    </StackPanel>

                    <!-- Factory Filter -->
                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <TextBlock Text="المصنع:" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="#1F2937" FontSize="14"/>
                        <ComboBox x:Name="FactoryFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}" IsEditable="True"/>
                    </StackPanel>

                    <!-- Truck Filter -->
                    <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="رقم العربية:" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="#1F2937" FontSize="14"/>
                        <TextBox x:Name="TruckNumberFilter" Width="140" Height="45" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Profit Type Filter -->
                    <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <TextBlock Text="نوع النتيجة:" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="#1F2937" FontSize="14"/>
                        <ComboBox x:Name="ProfitTypeFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="الجميع"/>
                            <ComboBoxItem Content="ربح فقط" Foreground="#10B981"/>
                            <ComboBoxItem Content="خسارة فقط" Foreground="#EF4444"/>
                            <ComboBoxItem Content="متعادل" Foreground="#6B7280"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="3" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button x:Name="GenerateReportButton" Content="إنشاء التقرير" Width="120" Height="35" FontSize="14" FontWeight="SemiBold"
                                Style="{StaticResource AccentButtonStyle}" Margin="0,0,0,10" Click="GenerateReportButton_Click"/>
                        <Button x:Name="ClearFiltersButton" Content="مسح الفلاتر" Width="120" Height="35" FontSize="14" FontWeight="SemiBold"
                                Background="#EF4444" Foreground="White" BorderThickness="0" Click="ClearFiltersButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Grid -->
            <Border Grid.Row="3" Background="White" CornerRadius="6" 
                    BorderThickness="1" BorderBrush="#E5E7EB" Padding="1" Margin="0,0,0,5"
                    Effect="{StaticResource CardShadow}">
                <DataGrid x:Name="ReportsDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  BorderThickness="0"
                  Background="White"
                  RowBackground="White"
                  AlternatingRowBackground="#F9FAFB"
                  Foreground="#1F2937"
                  FontSize="13"
                  ColumnWidth="*"
                  CanUserResizeColumns="True"
                  CanUserReorderColumns="True"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  RowHeaderWidth="0">

                    <DataGrid.Columns>
                        <!-- Date -->
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                   Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Farm Name -->
                        <DataGridTextColumn Header="اسم المزرعة" Binding="{Binding FarmName}" 
                                   Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                        <!-- Factory Name -->
                        <DataGridTextColumn Header="اسم المصنع" Binding="{Binding FactoryName}" 
                                   Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                        <!-- Truck Number -->
                        <DataGridTextColumn Header="رقم العربية" Binding="{Binding TruckNumber}" 
                                   Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Farm Total -->
                        <DataGridTextColumn Header="إجمالي المزرعة" Binding="{Binding TotalFarmCost}"
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                        <!-- Factory Total -->
                        <DataGridTextColumn Header="إجمالي المصنع" Binding="{Binding TotalFactoryRevenue}"
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                        <!-- Contractor Name (Truck Owner) -->
                        <DataGridTextColumn Header="اسم المقاول (صاحب العربية)" Binding="{Binding ContractorName}"
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                        <!-- Freight Price (Nolon) -->
                        <DataGridTextColumn Header="سعر النولون" Binding="{Binding FreightPrice}"
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                        <!-- Farm Price -->
                        <DataGridTextColumn Header="سعر المزرعة (جنيه/كجم)" Binding="{Binding FarmPricePerKilo}" 
                                   Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Factory Price -->
                        <DataGridTextColumn Header="سعر المصنع (جنيه/كجم)" Binding="{Binding FactoryPricePerKilo}" 
                                   Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        
                        <!-- Profit/Loss -->
                        <DataGridTemplateColumn Header="الربح/الخسارة (جنيه)" Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ProfitLoss}" 
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center" 
                                               Padding="0,0,5,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ProfitLossStatus}" Value="1">
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ProfitLossStatus}" Value="-1">
                                                        <Setter Property="Foreground" Value="#EF4444"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ProfitLossStatus}" Value="0">
                                                        <Setter Property="Foreground" Value="#6B7280"/>
                                                        <Setter Property="FontWeight" Value="Normal"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Profit Margin % -->
                        <DataGridTextColumn Header="هامش الربح %" Binding="{Binding ProfitMargin, StringFormat={}{0:N0}%}" 
                                   Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Setter Property="MinHeight" Value="40"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ProfitLossStatus}" Value="1">
                                    <Setter Property="Background" Value="#F0FDF4"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ProfitLossStatus}" Value="-1">
                                    <Setter Property="Background" Value="#FEF2F2"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#DBEAFE"/>
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="Padding" Value="5,0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="4" Background="White" CornerRadius="6" Padding="10" Margin="0,10,0,0" 
                    BorderThickness="1" BorderBrush="#E5E7EB">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock x:Name="RecordCountText" Text="إجمالي السجلات: 0" Foreground="#6B7280"/>
                        <TextBlock Text=" | " Foreground="#6B7280" Margin="10,0"/>
                        <TextBlock x:Name="FilteredCountText" Text="المعروض: 0" Foreground="#6B7280"/>
                        <TextBlock Text=" | " Foreground="#6B7280" Margin="10,0"/>
                        <TextBlock x:Name="ProfitableCountText" Text="مربح: 0" Foreground="#10B981"/>
                        <TextBlock Text=" | " Foreground="#6B7280" Margin="10,0"/>
                        <TextBlock x:Name="LossCountText" Text="خسارة: 0" Foreground="#EF4444"/>
                    </StackPanel>
                    <TextBlock x:Name="LastUpdateText" Text="آخر تحديث: --" Foreground="#6B7280" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="5" Background="Transparent" Padding="10" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="RefreshButton" Content="تحديث البيانات" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,10,0" Click="RefreshButton_Click"/>
                    <Button x:Name="DetailedReportButton" Content="تقرير مفصل" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                            Background="#8B5CF6" Foreground="White" BorderThickness="0" Margin="10,0" Click="DetailedReportButton_Click"/>
                    <Button x:Name="BackButton" Content="العودة للقائمة الرئيسية" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                            Background="#6B7280" Foreground="White" BorderThickness="0" Margin="10,0,0,0" Click="BackButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page> 
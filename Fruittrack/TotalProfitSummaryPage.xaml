<Page x:Class="Fruittrack.TotalProfitSummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ملخص الربح الإجمالي" 
      Background="#F8F9FA"
      FlowDirection="RightToLeft">

    <Page.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#D0D7DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6CB6FF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6CB6FF"/>
                                <Setter TargetName="border" Property="Background" Value="#F8FAFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button Style -->
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6CB6FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="contentPresenter" 
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5A9FE8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A8BD1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Summary Cards -->
            <RowDefinition Height="Auto"/>
            <!-- Filter Section -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Action Buttons -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Rectangle Width="5" Height="30" Fill="White" Margin="0,0,10,0" RadiusX="2" RadiusY="2"/>
                    <Path Data="M12 2C13.1 2 14 2.9 14 4V6H16C16.55 6 17 6.45 17 7S16.55 8 16 8H14V10C14 11.1 13.1 12 12 12S10 11.1 10 10V8H8C7.45 8 7 7.55 7 7S7.45 6 8 6H10V4C10 2.9 10.9 2 12 2M7 13H12.5L11 14.5L12.5 16H7C5.9 16 5 15.1 5 14S5.9 13 7 13Z"
                          Fill="White" Width="28" Height="28" Margin="15,0,0,0"/>
                    <StackPanel Margin="15,0,0,0">
                        <TextBlock Text="ملخص الربح الإجمالي" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   Foreground="#1F2937"/>
                        <TextBlock Text="عرض إجمالي الأرباح والخسائر" 
                                   FontSize="14" 
                                   Foreground="#6B7280" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Export Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="طباعة" 
                            Click="PrintButton_Click"
                            Background="#FF9800" Foreground="White"
                            Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                            MinWidth="100" Margin="5,0" Cursor="Hand"/>
                    <Button Content="PDF" 
                            Click="PdfButton_Click"
                            Background="#F44336" Foreground="White"
                            Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                            MinWidth="100" Margin="5,0" Cursor="Hand"/>
                    <Button Content="Excel" 
                            Click="ExcelButton_Click"
                            Background="#4CAF50" Foreground="White"
                            Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                            MinWidth="100" Margin="5,0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Cards -->
        <Border Grid.Row="1" Background="White" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Farm Weight Card -->
                <Border Grid.Column="0" Background="#F8FAFF" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="إجمالي وزن المزرعة" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="TotalFarmWeightText" Text="0 كجم" Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Total Factory Weight Card -->
                <Border Grid.Column="1" Background="#F0FDF4" CornerRadius="8" Padding="20" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="إجمالي وزن المصنع" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="TotalFactoryWeightText" Text="0 كجم" Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Total Profit/Loss Card -->
                <Border Grid.Column="2" Background="#FEF3F2" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="الربح/الخسارة النهائية" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="TotalProfitLossText" Text="0.00 جنيه" Style="{StaticResource ProfitTextStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="2" Background="White" Padding="20" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="الفلاتر والبحث" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,0,0,15"/>

                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="من تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                        <DatePicker x:Name="FromDatePicker" Width="140" Height="30"
                                   SelectedDate="{Binding FromDate}" 
                                   Background="White" 
                                   BorderBrush="#D0D7DE"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="إلى تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                        <DatePicker x:Name="ToDatePicker" Width="140" Height="30"
                                   SelectedDate="{Binding ToDate}" 
                                   Background="White" 
                                   BorderBrush="#D0D7DE"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="المزرعة:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                        <ComboBox x:Name="FarmFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}" IsEditable="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="المصنع:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                        <ComboBox x:Name="FactoryFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}" IsEditable="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="رقم العربية:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                        <TextBox x:Name="TruckNumberFilter" Width="140" Height="30" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="GenerateSummaryButton" Content="إنشاء الملخص" Width="120" Height="45" FontSize="14" FontWeight="SemiBold"
                            Style="{StaticResource AccentButtonStyle}" Click="GenerateSummaryButton_Click" Margin="0,0,10,0"/>
                    <Button x:Name="ClearFiltersButton" Content="مسح الفلاتر" Width="120" Height="45" FontSize="14" FontWeight="SemiBold"
                            Style="{StaticResource AccentButtonStyle}" Click="ClearFiltersButton_Click" Margin="0,0,10,0"/>
                   
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="3" Background="White" Padding="1" Margin="0,0,0,5">
            <DataGrid x:Name="SummaryDataGrid" 
                      ItemsSource="{Binding FilteredSummaries}"
                      AutoGenerateColumns="False" 
                      HeadersVisibility="Column" 
                      GridLinesVisibility="None"
                      Background="White" 
                      AlternatingRowBackground="#F8F9FA"
                      RowHeaderWidth="0">

                <DataGrid.Columns>
                    <!-- Date -->
                    <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Farm Name -->
                    <DataGridTextColumn Header="اسم المزرعة" Binding="{Binding FarmName}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                    <!-- Factory Name -->
                    <DataGridTextColumn Header="اسم المصنع" Binding="{Binding FactoryName}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                    <!-- Truck Number -->
                    <DataGridTextColumn Header="رقم العربية" Binding="{Binding TruckNumber}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Total Farm Weight -->
                    <DataGridTextColumn Header="وزن المزرعة (كجم)" Binding="{Binding TotalFarmWeight, StringFormat={}{0:N1}}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Total Factory Weight -->
                    <DataGridTextColumn Header="وزن المصنع (كجم)" Binding="{Binding TotalFactoryWeight, StringFormat={}{0:N1}}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Total Freight Cost -->
                    <DataGridTextColumn Header="إجمالي النولون (جنيه)" Binding="{Binding TotalFreightCost, StringFormat={}{0:N2}}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Total Farm Cost -->
                    <DataGridTextColumn Header="إجمالي أسعار المزرعة (جنيه)" Binding="{Binding TotalFarmCost, StringFormat={}{0:N2}}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Total Factory Revenue -->
                    <DataGridTextColumn Header="إجمالي أسعار المصنع (جنيه)" Binding="{Binding TotalFactoryRevenue, StringFormat={}{0:N2}}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Profit/Loss -->
                    <DataGridTemplateColumn Header="الربح/الخسارة (جنيه)" Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProfitLoss, StringFormat={}{0:N2}}" 
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Center" 
                                           Padding="0,0,5,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ProfitLossStatus}" Value="1">
                                                    <Setter Property="Foreground" Value="#10B981"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ProfitLossStatus}" Value="-1">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ProfitLossStatus}" Value="0">
                                                    <Setter Property="Foreground" Value="#6B7280"/>
                                                    <Setter Property="FontWeight" Value="Normal"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Profit Margin % -->
                    <DataGridTextColumn Header="هامش الربح %" Binding="{Binding ProfitMargin, StringFormat={}{0:N1}%}" 
                               Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#1F2937" Padding="20,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Grid.Column="0" 
                           Text="جاهز لعرض الملخص" 
                           Foreground="White" 
                           FontSize="14" 
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="RecordCountText" Grid.Column="1" 
                           Text="0 سجل" 
                           Foreground="#D1D5DB" 
                           FontSize="14" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="5" Background="White" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="RefreshButton" Content="تحديث البيانات" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                        Style="{StaticResource AccentButtonStyle}" Click="RefreshButton_Click" Margin="0,0,10,0"/>
                <Button x:Name="DetailedSummaryButton" Content="ملخص مفصل" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                        Style="{StaticResource AccentButtonStyle}" Click="DetailedSummaryButton_Click" Margin="0,0,10,0"/>
                <Button x:Name="BackButton" Content="العودة للقائمة الرئيسية" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                        Style="{StaticResource AccentButtonStyle}" Click="BackButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
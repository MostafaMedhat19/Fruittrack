<Page x:Class="Fruittrack.LicenseManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      FlowDirection="RightToLeft"
      FontFamily="Segoe UI"
      Title="إدارة الترخيص"
      Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.Resources>
            <Style TargetType="Border" x:Key="CardStyle">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="TextBlock" x:Key="HeaderStyle">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#2196F3"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>

            <Style TargetType="TextBlock" x:Key="InfoStyle">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#444444"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style TargetType="Button" x:Key="ButtonStyle">
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <TextBlock Text="إدارة الترخيص" Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- License Information -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="معلومات الترخيص" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#2196F3" 
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="الجهاز الحالي:" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CurrentDeviceText" Text="جاري التحميل..." Foreground="#666666"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="الجهاز المخزن:" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="StoredDeviceText" Text="جاري التحميل..." Foreground="#666666"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="حالة الترخيص:" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LicenseStatusText" Text="جاري التحميل..." Foreground="#666666"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="تاريخ الترخيص:" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LicenseDateText" Text="جاري التحميل..." Foreground="#666666"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="تحديث المعلومات" 
                    Click="RefreshInfo_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#2196F3"/>
            
            <Button Content="حذف الترخيص" 
                    Click="ClearLicense_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#F44336"/>
            
            <Button Content="رجوع" 
                    Click="GoBack_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#FF9800"/>
        </StackPanel>
    </Grid>
</Page> 
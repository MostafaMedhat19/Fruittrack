<Page x:Class="Fruittrack.CashReceiptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      FlowDirection="RightToLeft"
      FontFamily="Segoe UI"
      Title="صفحة استلام نقدية"
      Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form Section -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,0,0,20"
              >
            
            <StackPanel Orientation="Vertical">
                <TextBlock Text="صفحة استلام نقدية" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           Foreground="#2196F3"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Source Name -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
                        <TextBlock Text="اسم الشخص اللي استلمت منه" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SourceName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 ToolTip="ادخل اسم الشخص"
                                 Padding="10,8"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 />
                    </StackPanel>

                    <!-- Received Amount -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                        <TextBlock Text="المبلغ المستلم" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ReceivedAmount, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 ToolTip="ادخل المبلغ المستلم"
                                 Padding="10,8"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                />
                    </StackPanel>

                    <!-- Date -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                        <TextBlock Text="التاريخ" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}" 
                                   Padding="10,8"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1"/>
                    </StackPanel>

                    <!-- Paid Back Amount -->
                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                        <TextBlock Text="المبلغ المسدد" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PaidBackAmount, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 ToolTip="ادخل المبلغ المسدد"
                                 Padding="10,8"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                />
                    </StackPanel>

                    <!-- Remaining Amount -->
                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,0">
                        <TextBlock Text="المتبقي عليه سداده" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding RemainingAmount, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=OneWay}" 
                                 ToolTip="المتبقي عليه سداده"
                                 IsReadOnly="True"
                                 Background="#F8F9FA"
                                 Padding="10,8"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                               />
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Margin="10,0,0,0" VerticalAlignment="Bottom">
                        <Button Content="إضافة معاملة" 
                                Command="{Binding AddTransactionCommand}" 
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="10,8"
                                FontWeight="SemiBold"
                               />
                        

                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Margin="0,0,0,20"
              >
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="المعاملات المسجلة" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="20,20,20,10"
                           Foreground="#2196F3"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Transactions}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          Margin="20,0,20,20"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F8F9FA"
                          RowBackground="White"
                          BorderBrush="#E0E0E0"
                          BorderThickness="1">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="اسم الشخص" 
                                            Binding="{Binding SourceName, Mode=TwoWay}" 
                                            Width="*"
                                            FontWeight="SemiBold"/>
                        <DataGridTextColumn Header="المبلغ المستلم" 
                                            Binding="{Binding ReceivedAmount, Mode=TwoWay, StringFormat=C}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="التاريخ" 
                                            Binding="{Binding Date, StringFormat=d, Mode=TwoWay}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="المبلغ المسدد" 
                                            Binding="{Binding PaidBackAmount, Mode=TwoWay, StringFormat=C}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="المتبقي عليه سداده" 
                                            Binding="{Binding RemainingAmount, Mode=TwoWay, StringFormat=C}" 
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Reports Section -->
        <TabControl Grid.Row="2" 
                    Background="White" 
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                  
                   >
            
            <TabItem Header="تقرير المعاملات غير المسددة">
                <ListView ItemsSource="{Binding Transactions}" 
                          Margin="20"
                          Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    Margin="0,5" 
                                    Padding="15" 
                                    CornerRadius="4"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding SourceName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Date, StringFormat='التاريخ: {0:d}'}" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding RemainingAmount, StringFormat='المتبقي: {0:C}'}" 
                                               FontWeight="SemiBold" 
                                               Foreground="#E74C3C"
                                               VerticalAlignment="Center"
                                               Margin="20,0"/>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding ReceivedAmount, StringFormat='المستلم: {0:C}'}" 
                                               Foreground="#27AE60"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
            
            <TabItem Header="تقرير المبالغ المستلمة حسب المورد">
                <ListView ItemsSource="{Binding Transactions}" 
                          Margin="20"
                          Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    Margin="0,5" 
                                    Padding="15" 
                                    CornerRadius="4"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding SourceName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Date, StringFormat='التاريخ: {0:d}'}" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding ReceivedAmount, StringFormat='المستلم: {0:C}'}" 
                                               FontWeight="SemiBold" 
                                               Foreground="#27AE60"
                                               VerticalAlignment="Center"
                                               Margin="20,0"/>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding PaidBackAmount, StringFormat='المسدد: {0:C}'}" 
                                               Foreground="#F39C12"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Page> 
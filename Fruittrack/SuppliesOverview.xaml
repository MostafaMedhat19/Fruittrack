<Page x:Class="Fruittrack.SuppliesOverview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="نظرة عامة على كل التوريدات" 
      FlowDirection="RightToLeft"
      FontFamily="Segoe UI"
      Background="#F8F9FA">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title with soft accent -->
        <Border Grid.Row="0" Background="#6CB6FF" CornerRadius="6" Padding="15" Margin="0,0,0,20"
                BorderThickness="0" BorderBrush="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Rectangle Width="5" Height="30" Fill="White" Margin="0,0,10,0" RadiusX="2" RadiusY="2"/>
                    <TextBlock Text="نظرة عامة على كل التوريدات" 
                               FontSize="24" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Export Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="طباعة" 
                            Click="PrintButton_Click"
                            Background="#FF9800" Foreground="White"
                            Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                            MinWidth="100" Margin="5,0" Cursor="Hand"/>
                    <Button Content="PDF" 
                            Click="PdfButton_Click"
                            Background="#F44336" Foreground="White"
                            Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                            MinWidth="100" Margin="5,0" Cursor="Hand"/>
                    <Button Content="Excel" 
                            Click="ExcelButton_Click"
                            Background="#4CAF50" Foreground="White"
                            Padding="12,8" FontWeight="SemiBold" BorderThickness="0"
                            MinWidth="100" Margin="5,0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters Card -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" 
                BorderThickness="1" BorderBrush="#E5E7EB" Padding="15" Margin="0,10,0,25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Date Filters -->
                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="من تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#1F2937" FontSize="14"/>
                    <DatePicker x:Name="FromDatePicker" Width="140" Height="30" 
                               Background="#F9FAFB" BorderBrush="#D1D5DB"  Foreground="#1F2937" 
                               BorderThickness="1" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="إلى تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#1F2937" FontSize="14"/>
                    <DatePicker x:Name="ToDatePicker" Width="140" Height="30" 
                               Background="#F9FAFB" BorderBrush="#D1D5DB" Foreground="#1F2937" 
                               BorderThickness="1" VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Truck and Farm Filters -->
                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="رقم العربية:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#1F2937" FontSize="14"/>
                    <TextBox x:Name="TruckNumberFilter" Width="140" Height="30" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="المزرعة:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#1F2937" FontSize="14"/>
                    <ComboBox x:Name="FarmFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}" IsEditable="True"/>
                </StackPanel>

                <!-- Factory and Profit Filters -->
                <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="المصنع:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#1F2937" FontSize="14"/>
                    <ComboBox x:Name="FactoryFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}" IsEditable="True"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="نوع الربح:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#1F2937" FontSize="14"/>
                    <ComboBox x:Name="ProfitTypeFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}">
                        <ComboBoxItem Content="الكل"/>
                        <ComboBoxItem Content="ربح" Foreground="#10B981"/>
                        <ComboBoxItem Content="خسارة" Foreground="#FB7185"/>
                        <ComboBoxItem Content="صفر" Foreground="#6B7280"/>
                    </ComboBox>
                </StackPanel>

                <!-- Clear Form Button -->
                <Button x:Name="ClearButton" Grid.Column="3" Grid.RowSpan="2" Content="مسح النموذج" 
                        Width="120" Height="40" FontSize="14" FontWeight="SemiBold"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Style="{StaticResource AccentButtonStyle}"
                        Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2" CornerRadius="6" Margin="0,0,0,5" 
                Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <DataGrid x:Name="SuppliesDataGrid" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False"
                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              HeadersVisibility="Column"
                              SelectionMode="Extended"
                              SelectionUnit="FullRow"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="White"
                              AlternatingRowBackground="#F9FAFB"
                              Foreground="#1F2937"
                              FontSize="13"
                              ColumnWidth="Auto"
                              CanUserResizeColumns="True"
                              CanUserReorderColumns="True"
                              CanUserSortColumns="True"
                              IsReadOnly="True"
                              RowHeaderWidth="0"
                              MinWidth="1800"
                              HorizontalAlignment="Left">

                    <DataGrid.Columns>
                        <!-- Date Column -->
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                   Width="100" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Truck Info -->
                        <DataGridTextColumn Header="رقم العربية" Binding="{Binding TruckNumber}" 
                                   Width="100" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Freight Cost -->
                        <DataGridTextColumn Header="النولون" Binding="{Binding FreightCost, StringFormat={}{0:N0}}" 
                                   Width="80" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Farm Section -->
                        <DataGridTextColumn Header="اسم المزرعة" Binding="{Binding FarmName}" 
                                   Width="120" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="وزن المزرعة (كجم)" Binding="{Binding FarmWeight, StringFormat={}{0:N0}}" 
                                   Width="140" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="خصم المزرعة%" Binding="{Binding FarmDiscountPercentage, StringFormat={}{0}%}" 
                                   Width="100" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="الوزن المسموح من المزرعة" Binding="{Binding AllowedWeightFromFarm, StringFormat={}{0:N0}}" 
                                   Width="160" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Farm Price Column -->
                        <DataGridTextColumn Header="سعر المزرعة (جنيه/كجم)" 
                                           Binding="{Binding FarmPrice, StringFormat={}{0:N0}}" 
                                           Width="150" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Factory Section -->
                        <DataGridTextColumn Header="اسم المصنع" Binding="{Binding FactoryName}" 
                                   Width="120" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="وزن المصنع (كجم)" Binding="{Binding FactoryWeight, StringFormat={}{0:N0}}" 
                                   Width="140" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="خصم المصنع%" Binding="{Binding FactoryDiscountPercentage, StringFormat={}{0}%}" 
                                   Width="100" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="الوزن المسموح من المصنع" Binding="{Binding AllowedWeightFromFactory, StringFormat={}{0:N0}}" 
                                   Width="160" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Factory Price Column -->
                        <DataGridTextColumn Header="سعر المصنع (جنيه/كجم)" 
                                           Binding="{Binding FactoryPrice, StringFormat={}{0:N0}}" 
                                           Width="150" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Profit/Loss -->
                        <DataGridTextColumn Header="الربح/الخسارة" Binding="{Binding ProfitLoss, StringFormat={}{0:N0}}" 
                                   Width="120" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,5,0"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ProfitLoss}" Value="-1">
                                            <Setter Property="Foreground" Value="#FB7185"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ProfitLoss}" Value="0">
                                            <Setter Property="Foreground" Value="#10B981"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Notes -->
                        <DataGridTemplateColumn Header="الملاحظات" Width="150" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Notes}" 
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Padding="5,3"
                                               MaxHeight="80"
                                               ToolTip="{Binding Notes}"
                                               TextTrimming="CharacterEllipsis">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="الإجراءات" Width="140" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4">
                                        <!-- Edit Button -->
                                        <Button Click="EditButton_Click"
                                                Background="#10B981" 
                                                Foreground="White"
                                                FontSize="12" 
                                                FontWeight="SemiBold"
                                                Padding="12,6" 
                                                Margin="3,2"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="تعديل هذا السجل"
                                                Tag="{Binding}"
                                                MinWidth="50">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="✏️" FontSize="10" Margin="0,0,4,0"/>
                                                    <TextBlock Text="تعديل" FontSize="11"/>
                                                </StackPanel>
                                            </Button.Content>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" 
                                                                        Background="{TemplateBinding Background}" 
                                                                        CornerRadius="6"
                                                                        BorderThickness="0"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"/>
                                                                    <Border.Effect>
                                                                        <DropShadowEffect ShadowDepth="1" 
                                                                                          BlurRadius="3" 
                                                                                          Color="#00000030" 
                                                                                          Direction="270"/>
                                                                    </Border.Effect>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#059669"/>
                                                                        <Setter TargetName="border" Property="RenderTransform">
                                                                            <Setter.Value>
                                                                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#047857"/>
                                                                        <Setter TargetName="border" Property="RenderTransform">
                                                                            <Setter.Value>
                                                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Delete Button -->
                                        <Button Click="DeleteButton_Click"
                                                Background="#EF4444" 
                                                Foreground="White"
                                                FontSize="12" 
                                                FontWeight="SemiBold"
                                                Padding="12,6" 
                                                Margin="3,2"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="حذف هذا السجل"
                                                Tag="{Binding}"
                                                MinWidth="50">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="🗑️" FontSize="10" Margin="0,0,4,0"/>
                                                    <TextBlock Text="حذف" FontSize="11"/>
                                                </StackPanel>
                                            </Button.Content>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" 
                                                                        Background="{TemplateBinding Background}" 
                                                                        CornerRadius="6"
                                                                        BorderThickness="0"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"/>
                                                                    <Border.Effect>
                                                                        <DropShadowEffect ShadowDepth="1" 
                                                                                          BlurRadius="3" 
                                                                                          Color="#00000030" 
                                                                                          Direction="270"/>
                                                                    </Border.Effect>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                                                                        <Setter TargetName="border" Property="RenderTransform">
                                                                            <Setter.Value>
                                                                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#B91C1C"/>
                                                                        <Setter TargetName="border" Property="RenderTransform">
                                                                            <Setter.Value>
                                                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Setter Property="MinHeight" Value="35"/>
                            <Setter Property="Height" Value="Auto"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ProfitLoss}" Value="-1">
                                    <Setter Property="Background" Value="#FEF2F2"/>
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ProfitLoss}" Value="0">
                                    <Setter Property="Background" Value="#F0FDF4"/>
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#DBEAFE"/>
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="Padding" Value="5,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Stretch" 
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#6CB6FF" CornerRadius="6" Padding="10">
            <Grid>
                <TextBlock x:Name="RecordCountText" Text="إجمالي السجلات: 0" Foreground="White" HorizontalAlignment="Left"/>
                <TextBlock x:Name="LastUpdateText" Text="آخر تحديث: --" Foreground="White" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>

    <Page.Resources>
        <!-- Styles -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6CB6FF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6CB6FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter x:Name="contentPresenter" 
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Content="{TemplateBinding Content}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8CC8FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#54A6FF"/>
                                <Setter TargetName="contentPresenter" Property="Margin" Value="1,1,0,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F6F8FA"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DarkDataGridCell" TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="#1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredHeader" BasedOn="{StaticResource DarkDataGridColumnHeader}" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Shadow Effect - very minimal -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="4" ShadowDepth="1" Color="#08000000"/>
    </Page.Resources>
</Page>
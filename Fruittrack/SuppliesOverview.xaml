<Page x:Class="Fruittrack.SuppliesOverview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="نظرة عامة على كل التوريدات" 
      FlowDirection="RightToLeft"
      FontFamily="Segoe UI"
      Background="#0A2647">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title with accent bar -->
        <Border Grid.Row="0" Background="#003366" CornerRadius="6" Padding="15" Margin="0,0,0,20"
                BorderThickness="0" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Width="5" Height="30" Fill="#205295" Margin="0,0,10,0" RadiusX="2" RadiusY="2"/>
                <TextBlock Text="نظرة عامة على كل التوريدات" 
                           FontSize="24" FontWeight="SemiBold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Filters Card -->
        <Border Grid.Row="1" Background="#144272" CornerRadius="6" 
                BorderThickness="0" Padding="15" Margin="0,10,0,25"
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Date Filters -->
                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="من تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#80FFFFFF" FontSize="14"/>
                    <DatePicker Width="140" Height="30" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="إلى تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#80FFFFFF" FontSize="14"/>
                    <DatePicker Width="140" Height="30" />
                </StackPanel>

                <!-- Truck and Farm Filters -->
                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="رقم العربية:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#80FFFFFF" FontSize="14"/>
                    <TextBox Width="140" Height="30" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="المزرعة:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#80FFFFFF" FontSize="14"/>
                    <ComboBox Width="140" Height="30" Style="{StaticResource ModernComboBox}"/>
                </StackPanel>

                <!-- Factory and Profit Filters -->
                <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="المصنع:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#80FFFFFF" FontSize="14"/>
                    <ComboBox Width="140" Height="30" Style="{StaticResource ModernComboBox}"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="نوع الربح:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#80FFFFFF" FontSize="14"/>
                    <ComboBox Width="140" Height="30" Style="{StaticResource ModernComboBox}">
                        <ComboBoxItem Content="ربح" Foreground="#FF4CAF50"/>
                        <ComboBoxItem Content="خسارة" Foreground="#FFF44336"/>
                        <ComboBoxItem Content="صفر" Foreground="#FF9E9E9E"/>
                    </ComboBox>
                </StackPanel>

                <!-- Search Button -->
                <Button Grid.Column="3" Grid.RowSpan="2" Content="بحث" 
                        Width="120" Height="40" FontSize="14" FontWeight="SemiBold"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Style="{StaticResource AccentButtonStyle}"
                        Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2" CornerRadius="6" Margin="0,0,0,10" 
                Background="#144272" Padding="1" Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="SuppliesDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  BorderThickness="0"
                  Background="Transparent"
                  RowBackground="#003366"
                  AlternatingRowBackground="#0A2647"
                  Foreground="White"
                  FontSize="13"
                  ColumnWidth="*"
                  CanUserResizeColumns="True"
                  CanUserReorderColumns="True"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  RowHeight="35"
                  RowHeaderWidth="0">

                    <DataGrid.Columns>
                        <!-- Date Column -->
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                   MinWidth="40" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Truck Info -->
                        <DataGridTextColumn Header="رقم العربية" Binding="{Binding TruckNumber}" 
                                   MinWidth="40" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Freight Cost -->
                        <DataGridTextColumn Header="النولون" Binding="{Binding FreightCost, StringFormat={}{0:N0}}" 
                                   MinWidth="40" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Farm Section -->
                        <DataGridTextColumn Header="اسم المزرعة" Binding="{Binding FarmName}" 
                                   MinWidth="40" HeaderStyle="{StaticResource CenteredHeader}"/>

                        <DataGridTextColumn Header="الوزن في المزرعة" Binding="{Binding WeightAtFarm, StringFormat={}{0:N2} kg}" 
                                   MinWidth="40" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="خصم المزرعة %" Binding="{Binding FarmDiscountPercentage, StringFormat={}{0}%}" 
                                   MinWidth="0" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="الوزن المسموح من المزرعة" Binding="{Binding AllowedWeightFromFarm, StringFormat={}{0:N2} kg}" 
                                   MinWidth="130" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="سعر المزرعة" Binding="{Binding FarmPrice, StringFormat={}{0:N2}}" 
                                   MinWidth="90" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="إجمالي المزرعة" Binding="{Binding FarmTotal, StringFormat={}{0:N2}}" 
                                   MinWidth="110" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Factory Section -->
                        <DataGridTextColumn Header="اسم المصنع" Binding="{Binding FactoryName}" 
                                   MinWidth="130" HeaderStyle="{StaticResource CenteredHeader}"/>

                        <DataGridTextColumn Header="الوزن في المصنع" Binding="{Binding WeightAtFactory, StringFormat={}{0:N2} kg}" 
                                   MinWidth="110" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="خصم المصنع %" Binding="{Binding FactoryDiscountPercentage, StringFormat={}{0}%}" 
                                   MinWidth="110" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="الوزن المسموح من المصنع" Binding="{Binding AllowedWeightFromFactory, StringFormat={}{0:N2} kg}" 
                                   MinWidth="130" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="سعر المصنع" Binding="{Binding FactoryPrice, StringFormat={}{0:N2}}" 
                                   MinWidth="90" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="إجمالي المصنع" Binding="{Binding FactoryTotal, StringFormat={}{0:N2}}" 
                                   MinWidth="110" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Profit/Loss -->
                        <DataGridTextColumn Header="الربح/الخسارة" Binding="{Binding ProfitLoss, StringFormat={}{0:N2}}" 
                                   MinWidth="110" HeaderStyle="{StaticResource CenteredHeader}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0,10,0"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ProfitLoss}" Value="-1">
                                            <Setter Property="Foreground" Value="#FFFF5252"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ProfitLoss}" Value="0">
                                            <Setter Property="Foreground" Value="#FF4CAF50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderBrush" Value="#205295"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ProfitLoss}" Value="-1">
                                    <Setter Property="Background" Value="#33FF5252"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ProfitLoss}" Value="0">
                                    <Setter Property="Background" Value="#332196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#205295"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#205295"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="#205295"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="Padding" Value="5,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" 
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>

                <!-- Scrollbar for horizontal scrolling -->
                <ScrollBar Grid.Row="1" Orientation="Horizontal" 
                  Height="15" Margin="0,5,0,0"
                  Visibility="{Binding ScrollViewer.HorizontalScrollBarVisibility, 
                             RelativeSource={RelativeSource AncestorType=DataGrid}}"
                  Value="{Binding HorizontalOffset, Mode=TwoWay, 
                        RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                  Maximum="{Binding ScrollableWidth, 
                          RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                  ViewportSize="{Binding ViewportWidth, 
                               RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                  Style="{StaticResource CustomScrollBar}"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#003366" CornerRadius="6" Padding="10">
            <Grid>
                <TextBlock Text="إجمالي السجلات: 125" Foreground="#80FFFFFF" HorizontalAlignment="Left"/>
                <TextBlock Text="آخر تحديث: 12/05/2023 14:30" Foreground="#80FFFFFF" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>

    <Page.Resources>
        <!-- Styles -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="BorderBrush" Value="#205295"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox" 
                                                  Foreground="{TemplateBinding Foreground}"
                                                  VerticalContentAlignment="Center"
                                                  Padding="5,0,5,0"/>
                                <Button x:Name="PART_Button" 
                                        Content="📅" 
                                        FontSize="14"
                                        HorizontalAlignment="Right"
                                        Width="30"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#80FFFFFF"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="BorderBrush" Value="#205295"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"  
                                              Grid.Column="2" 
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="Transparent"/>
                                <ContentPresenter x:Name="ContentSite" 
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  Margin="5,0,30,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox" 
                                         Visibility="Hidden"
                                         Background="Transparent"
                                         Foreground="{TemplateBinding Foreground}"
                                         Padding="5,0,5,0"/>
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border x:Name="PopupBorder"
                                            Background="#003366"
                                            BorderBrush="#205295"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#80FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#205295"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter x:Name="contentPresenter" 
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Content="{TemplateBinding Content}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#144272"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0A2647"/>
                                <Setter TargetName="contentPresenter" Property="Margin" Value="1,1,0,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="BorderBrush" Value="#205295"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DarkDataGridCell" TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="#205295"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredHeader" BasedOn="{StaticResource DarkDataGridColumnHeader}" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="10" ShadowDepth="2" Color="#33000000"/>
    </Page.Resources>
</Page>
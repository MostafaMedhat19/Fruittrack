<Page x:Class="Fruittrack.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fruittrack"
        mc:Ignorable="d"
        Title="Makkah Traders - Point of Sale" 
  
        Background="#F8F9FA">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Foreground" Value="#1F2937"/>
        </Style>

        <!-- Updated Gradient Backgrounds to Soft Theme -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E3F2FD" Offset="0"/>
            <GradientStop Color="#BBDEFB" Offset="0.5"/>
            <GradientStop Color="#90CAF9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F1F8FF" Offset="0"/>
            <GradientStop Color="#E3F2FD" Offset="1"/>
        </LinearGradientBrush>

        <!-- Effects - very subtle -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="8" ShadowDepth="1" Color="#08000000"/>

        <!-- Button Styles -->
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <Border x:Name="hoverOverlay" 
                                        Background="#6CB6FF" 
                                        CornerRadius="8"
                                        Opacity="0"/>
                                <ContentPresenter x:Name="contentPresenter" 
                                                  Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.05"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Styles -->
        <Style TargetType="Path" x:Key="MenuIconStyle">
            <Setter Property="Fill" Value="#6B7280"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>

        <!-- Notification Badge Style -->
        <Style TargetType="Border" x:Key="NotificationBadge">
            <Setter Property="Background" Value="#FB7185"/>
            <Setter Property="CornerRadius" Value="9"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,-5,-5,0"/>
        </Style>

        <!-- Animation Resources -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.8"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <!-- Soft Background -->
        <Grid Background="#F8F9FA">
            <!-- Subtle accent pattern -->
            <Canvas>
                <Ellipse Canvas.Left="15" Canvas.Top="20" Width="4" Height="4" Fill="#D1D5DB" Opacity="0.3">
                    <Ellipse.RenderTransform>
                        <TranslateTransform X="0" Y="0"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" 
                                                     From="20" To="80" Duration="0:0:8" AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)" 
                                                     From="15" To="25" Duration="0:0:5" AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </Canvas>

            <!-- Soft Wave Effect Bottom -->
            <Path HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
                  Stretch="Fill" Height="180"
                  Fill="{StaticResource SecondaryGradient}" Opacity="0.4">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,180">
                            <BezierSegment Point1="0,120" Point2="300,80" Point3="600,100"/>
                            <BezierSegment Point1="900,120" Point2="1200,100" Point3="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"/>

                            <LineSegment Point="0,180"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Grid>

        <!-- Top Bar -->
        <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Height="50" VerticalAlignment="Top">
            <Grid>
                <!-- Notification Button -->
                <Button Width="40" Height="40" HorizontalAlignment="Left" 
                        Margin="20,0,0,0" VerticalAlignment="Center"
                        Background="Transparent" BorderThickness="0">
                    <Grid>
                        <Path Data="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z" 
                              Fill="#6B7280" Stretch="Uniform" Width="24" Height="24"/>
                        <Border Style="{StaticResource NotificationBadge}">
                            <TextBlock Text="3" Foreground="White" FontSize="10" 
                                       FontWeight="Bold" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Button>

                <!-- Date/Time Display -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="DateTextBlock" Foreground="#6B7280" FontSize="14"/>
                    <TextBlock x:Name="TimeTextBlock" Foreground="#1F2937" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
        <!-- Main Content -->
        <Grid Margin="40" VerticalAlignment="Center">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                  Width="1200" Height="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side: Branding -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="334" Width="260">
                    <!-- Logo -->
                    <Image x:Name="LogoImage"
                           Source="pack://application:,,,/Images/support-icon.jpg"
                           Width="245" Height="210"
                           Stretch="Uniform" 
                           Margin="0,0,0,20" 
                           HorizontalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                         From="0.9" To="1" Duration="0:0:3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Image.Triggers>
                    </Image>

                    <!-- Brand Name -->

                    <TextBlock Text="Future Company" FontSize="20" 
                               Foreground="#6B7280" Margin="0,0,0,30"
                               HorizontalAlignment="Center"/>

                    <!-- Status Indicators -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#10B981" 
                                Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="System Status: Operational" Foreground="#6B7280" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#10B981" 
                                Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Database: Connected" Foreground="#6B7280" FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right Side: Menu Buttons -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Width="400" Margin="40,0,0,0">
                    <TextBlock Text="القائمة الرئسية " FontSize="24" FontWeight="Bold"
                               Foreground="#1F2937" Margin="0,0,0,30"
                               HorizontalAlignment="Center"/>

                    <!-- Sales Button -->
                    <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" 
                                  Style="{StaticResource MenuIconStyle}"/>
                            <TextBlock Text="صفحة تسجيل عملية التوريد" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory Button -->
                    <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click_1">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M20 2H4c-1 0-2 .9-2 2v3.01c0 .72.43 1.34 1 1.69V20c0 1.1 1.1 2 2 2h14c.9 0 2-.9 2-2V8.7c.57-.35 1-.97 1-1.69V4c0-1.1-1-2-2-2zm-5 12H9v-2h6v2zm5-7H4V4l16-.02V7z" 
                                  Style="{StaticResource MenuIconStyle}"/>
                            <TextBlock Text="صفحة عرض كل التوريدات" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Reports Button -->
                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" 
                                  Style="{StaticResource MenuIconStyle}"/>
                            <TextBlock Text="صفحة التوريدات المفقودة أو بها أخطاء" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Settings Button -->
                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" 
                                  Style="{StaticResource MenuIconStyle}"/>
                            <TextBlock Text="صفحة هامش الربح الإجمالي" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Additional Buttons -->
                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z" 
                                  Style="{StaticResource MenuIconStyle}"/>
                            <TextBlock Text="صفحة التسوية المالية" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" 
                                  Style="{StaticResource MenuIconStyle}"/>
                            <TextBlock Text="صفحة تقارير الإنتاج والتوزيع" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Height="30" VerticalAlignment="Bottom">
            <TextBlock Text="Version 2.1.5 | © 2025 Makkah Traders | All rights reserved" 
                       Foreground="#6B7280" FontSize="12"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        </Border>
    </Grid>
</Page>
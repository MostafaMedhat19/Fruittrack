<Page x:Class="Fruittrack.InvalidSuppliesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="التوريدات المفقودة أو بها أخطاء" 
      FlowDirection="RightToLeft"
      FontFamily="Segoe UI"
      Background="#F8F9FA">

    <Page.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="8" ShadowDepth="1" Color="#08000000"/>

        <!-- Header Style -->
        <Style x:Key="DarkDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#6CB6FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5BA3F0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title with accent bar -->
            <Border Grid.Row="0" Background="#6CB6FF" CornerRadius="6" Padding="15" Margin="0,0,0,20"
                    BorderThickness="0" BorderBrush="Transparent"
                    Effect="{StaticResource CardShadow}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Rectangle Width="5" Height="30" Fill="White" Margin="0,0,10,0" RadiusX="2" RadiusY="2"/>
                    <TextBlock Text="التوريدات المفقودة أو بها أخطاء" 
                               FontSize="24" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center"/>
                    <Path Data="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.89 1 3 1.89 3 3V21C3 22.1 3.89 23 5 23H19C20.1 23 21 22.1 21 21V9M19 21H5V3H14V9H19Z" 
                          Fill="White" Width="28" Height="28" Margin="15,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Error Type Summary Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Zero Weight Card -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,5,0" 
                        Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                    <StackPanel>
                        <TextBlock Text="وزن المصنع صفر" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ZeroWeightCount" Text="0" FontSize="24" FontWeight="Bold" 
                                   Foreground="#EF4444" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Null Weight Card -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="5,0,5,0" 
                        Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                    <StackPanel>
                        <TextBlock Text="وزن المصنع غير مسجل" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="NullWeightCount" Text="0" FontSize="24" FontWeight="Bold" 
                                   Foreground="#F59E0B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Invalid Factory Card -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15" Margin="5,0,5,0" 
                        Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                    <StackPanel>
                        <TextBlock Text="مصنع غير صحيح" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="InvalidFactoryCount" Text="0" FontSize="24" FontWeight="Bold" 
                                   Foreground="#8B5CF6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total Issues Card -->
                <Border Grid.Column="3" Background="White" CornerRadius="8" Padding="15" Margin="5,0,0,0" 
                        Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                    <StackPanel>
                        <TextBlock Text="إجمالي المشاكل" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalIssuesCount" Text="0" FontSize="24" FontWeight="Bold" 
                                   Foreground="#6CB6FF" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Filters and Data Card -->
            <Border Grid.Row="2" Background="White" CornerRadius="6" 
                    BorderThickness="1" BorderBrush="#E5E7EB" Padding="15" Margin="0,0,0,15"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Date Filters -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="من تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       Foreground="#1F2937" FontSize="14"/>
                            <DatePicker x:Name="FromDatePicker" Width="140" Height="30" 
                                       Background="White" BorderBrush="#D1D5DB" Foreground="#1F2937" 
                                       BorderThickness="1" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <TextBlock Text="إلى تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       Foreground="#1F2937" FontSize="14"/>
                            <DatePicker x:Name="ToDatePicker" Width="140" Height="30" 
                                       Background="White" BorderBrush="#D1D5DB" Foreground="#1F2937" 
                                       BorderThickness="1" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Error Type Filter -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="نوع الخطأ:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       Foreground="#1F2937" FontSize="14"/>
                            <ComboBox x:Name="ErrorTypeFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="جميع الأخطاء"/>
                                <ComboBoxItem Content="وزن المصنع صفر" Foreground="#EF4444"/>
                                <ComboBoxItem Content="وزن المصنع غير مسجل" Foreground="#F59E0B"/>
                                <ComboBoxItem Content="مصنع غير صحيح" Foreground="#8B5CF6"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Factory Filter -->
                        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <TextBlock Text="المصنع:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       Foreground="#1F2937" FontSize="14"/>
                            <ComboBox x:Name="FactoryFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>

                        <!-- Truck Number Filter -->
                        <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="رقم العربية:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       Foreground="#1F2937" FontSize="14"/>
                            <TextBox x:Name="TruckNumberFilter" Width="140" Height="30" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Priority Filter -->
                        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <TextBlock Text="الأولوية:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       Foreground="#1F2937" FontSize="14"/>
                            <ComboBox x:Name="PriorityFilter" Width="140" Height="30" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="جميع الأولويات"/>
                                <ComboBoxItem Content="عالي" Foreground="#EF4444"/>
                                <ComboBoxItem Content="متوسط" Foreground="#F59E0B"/>
                                <ComboBoxItem Content="منخفض" Foreground="#10B981"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="3" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Button x:Name="SearchButton" Content="بحث" Width="100" Height="35" FontSize="14" FontWeight="SemiBold"
                                    Style="{StaticResource AccentButtonStyle}" Margin="0,0,0,10" Click="SearchButton_Click"/>
                            <Button x:Name="ClearButton" Content="مسح الفلاتر" Width="100" Height="35" FontSize="14" FontWeight="SemiBold"
                                    Background="#EF4444" Foreground="White" BorderThickness="0" Click="ClearButton_Click"/>
                            <Button x:Name="ExportButton" Content="تصدير CSV" Width="100" Height="35" FontSize="14" FontWeight="SemiBold"
                                    Background="#10B981" Foreground="White" BorderThickness="0" Margin="0,10,0,0" Click="ExportButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Data Grid -->
                    <Border Grid.Row="1" CornerRadius="6" 
                            Background="White" Padding="1" Effect="{StaticResource CardShadow}" BorderThickness="1" BorderBrush="#E5E7EB">
                        <DataGrid x:Name="InvalidSuppliesDataGrid" AutoGenerateColumns="False" 
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          HeadersVisibility="Column"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9FAFB"
                          Foreground="#1F2937"
                          FontSize="13"
                          ColumnWidth="*"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="True"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          RowHeaderWidth="0">

                            <DataGrid.Columns>
                                <!-- Error Type -->
                                <DataGridTemplateColumn Header="نوع الخطأ" Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="8,4" Margin="2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ErrorType}" Value="وزن صفر">
                                                                <Setter Property="Background" Value="#FEF2F2"/>
                                                                <Setter Property="BorderBrush" Value="#EF4444"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ErrorType}" Value="وزن فارغ">
                                                                <Setter Property="Background" Value="#FEF3C7"/>
                                                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ErrorType}" Value="مصنع غير صحيح">
                                                                <Setter Property="Background" Value="#F3E8FF"/>
                                                                <Setter Property="BorderBrush" Value="#8B5CF6"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ErrorType}" Value="وزن سالب">
                                                                <Setter Property="Background" Value="#FEF2F2"/>
                                                                <Setter Property="BorderBrush" Value="#EF4444"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ErrorType}" Value="عربية مفقودة">
                                                                <Setter Property="Background" Value="#DCFCE7"/>
                                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ErrorType}" Value="مزرعة مفقودة">
                                                                <Setter Property="Background" Value="#DCFCE7"/>
                                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ErrorType}" FontWeight="Medium" FontSize="11" TextAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Date -->
                                <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,0,5,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Truck Number -->
                                <DataGridTextColumn Header="رقم العربية" Binding="{Binding TruckNumber}" 
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,0,5,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Farm Name -->
                                <DataGridTextColumn Header="اسم المزرعة" Binding="{Binding FarmName}" 
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                                <!-- Factory Name -->
                                <DataGridTextColumn Header="اسم المصنع" Binding="{Binding FactoryName}" 
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}"/>

                                <!-- Factory Weight -->
                                <DataGridTextColumn Header="وزن المصنع (كجم)" Binding="{Binding FactoryWeight, StringFormat={}{0:N1}}" 
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,0,5,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Error Description -->
                                <DataGridTextColumn Header="وصف المشكلة" Binding="{Binding ErrorDescription}" 
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,0,5,0"/>
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Suggested Fix -->
                                <DataGridTextColumn Header="الحل المقترح" Binding="{Binding SuggestedFix}" 
                                           Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,0,5,0"/>
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Priority -->
                                <DataGridTemplateColumn Header="الأولوية" Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="6,3" Margin="2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Priority}" Value="عالي">
                                                                <Setter Property="Background" Value="#FEF2F2"/>
                                                                <Setter Property="BorderBrush" Value="#EF4444"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="متوسط">
                                                                <Setter Property="Background" Value="#FEF3C7"/>
                                                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="منخفض">
                                                                <Setter Property="Background" Value="#DCFCE7"/>
                                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Priority}" FontWeight="Medium" FontSize="11" TextAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Actions -->
                                <DataGridTemplateColumn Header="الإجراءات" Width="*" HeaderStyle="{StaticResource DarkDataGridColumnHeader}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="إصلاح" FontSize="10" Padding="8,3" Margin="2"
                                                        Background="#10B981" Foreground="White" BorderThickness="0"
                                                        Click="FixButton_Click" Tag="{Binding}"/>
                                                <Button Content="تجاهل" FontSize="10" Padding="8,3" Margin="2"
                                                        Background="#6B7280" Foreground="White" BorderThickness="0"
                                                        Click="IgnoreButton_Click" Tag="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                    <Setter Property="MinHeight" Value="40"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Priority}" Value="عالي">
                                            <Setter Property="Background" Value="#FEF2F2"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Priority}" Value="متوسط">
                                            <Setter Property="Background" Value="#FFFBEB"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F3F4F6"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#DBEAFE"/>
                                            <Setter Property="Foreground" Value="#1F2937"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="#1F2937"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="3" Background="White" CornerRadius="6" Padding="10" Margin="0,10,0,0" 
                    BorderThickness="1" BorderBrush="#E5E7EB">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock x:Name="RecordCountText" Text="إجمالي السجلات المشكوك فيها: 0" Foreground="#6B7280"/>
                        <TextBlock Text=" | " Foreground="#6B7280" Margin="10,0"/>
                        <TextBlock x:Name="FilteredCountText" Text="المعروض: 0" Foreground="#6B7280"/>
                    </StackPanel>
                    <TextBlock x:Name="LastUpdateText" Text="آخر تحديث: --" Foreground="#6B7280" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="4" Background="Transparent" Padding="10" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="RefreshButton" Content="تحديث البيانات" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                            Style="{StaticResource AccentButtonStyle}" Margin="0,0,10,0" Click="RefreshButton_Click"/>
                    <Button x:Name="FixAllButton" Content="إصلاح جميع المشاكل" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                            Background="#10B981" Foreground="White" BorderThickness="0" Margin="10,0" Click="FixAllButton_Click"/>
                    <Button x:Name="BackButton" Content="العودة للقائمة الرئيسية" Width="150" Height="40" FontSize="14" FontWeight="SemiBold"
                            Background="#6B7280" Foreground="White" BorderThickness="0" Margin="10,0,0,0" Click="BackButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page> 
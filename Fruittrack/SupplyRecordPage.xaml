<Page x:Class="Fruittrack.SupplyRecordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fruittrack"
        mc:Ignorable="d"
        Title="تسجيل عملية التوريد" 
        FontFamily="Segoe UI"
        FontSize="16"
        Background="White">

    <Page.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E3A8A"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="LightBackground" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>

        <!-- Animations -->
        <Storyboard x:Key="HoverAnimation">
            <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Opacity" To="1"/>
        </Storyboard>

        <Storyboard x:Key="UnhoverAnimation">
            <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Opacity" To="0"/>
        </Storyboard>

        <!-- Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Focusable="False"/>
                                <Border x:Name="hoverEffect" 
                                        Background="{StaticResource PrimaryBrush}" 
                                        Opacity="0"
                                        CornerRadius="6"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.05"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox" x:Key="ErrorTextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Error message style -->
        <Style x:Key="ErrorMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,-8,0,8"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>



        <!-- ComboBox Toggle Button Template - Must be defined before ComboBox style -->
        <ControlTemplate x:Key="ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="border" 
                        Grid.ColumnSpan="2"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="6"/>
                <Path x:Name="arrow" 
                      Grid.Column="1" 
                      Fill="{StaticResource TextSecondary}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M0,0 L4,4 8,0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="arrow" Property="Fill" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="arrow" Property="Data" Value="M0,4 L4,0 8,4 Z"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Simple Working DatePicker like in the image -->
        <Style x:Key="WorkingDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#D0D7DE"/>
            <Setter Property="Foreground" Value="#24292F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    SnapsToDevicePixels="True"
                                    Panel.ZIndex="1">
                                <Grid Panel.ZIndex="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ContentPresenter x:Name="ContentSite" 
                                                      Grid.Column="0"
                                                      IsHitTestVisible="False" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Panel.ZIndex="5"
                                                      Visibility="Visible"/>
                                    
                                    <TextBox x:Name="PART_EditableTextBox" 
                                             Grid.Column="0"
                                             Visibility="Collapsed"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="{TemplateBinding Foreground}"
                                             Margin="{TemplateBinding Padding}"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             Focusable="True"
                                             IsReadOnlyCaretVisible="False"
                                             Panel.ZIndex="5"
                                             Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    
                                    <ToggleButton x:Name="ToggleButton"  
                                                  Grid.Column="1" 
                                                  Focusable="false"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Panel.ZIndex="3">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent">
                                                    <Path x:Name="arrow" 
                                                          Fill="#64748B"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Data="M0,0 L4,4 8,0 Z"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="arrow" Property="Fill" Value="#24292F"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="true">
                                                        <Setter TargetName="arrow" Property="Data" Value="M0,4 L4,0 8,4 Z"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="#F8F9FA"
                                        BorderBrush="#D0D7DE"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B949E"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0969DA"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="false">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton" 
                                                  Template="{StaticResource ComboBoxToggleButtonTemplate}"
                                                  Grid.Column="2" 
                                                  Focusable="false"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"/>
                                    <ContentPresenter x:Name="ContentSite" 
                                                      IsHitTestVisible="False" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            <Border x:Name="hoverEffect" 
                                    Background="{StaticResource PrimaryBrush}" 
                                    Opacity="0"
                                    CornerRadius="6"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.05"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Border x:Name="hoverOverlay" 
                                        Background="White" 
                                        CornerRadius="8"
                                        Opacity="0"/>
                                <ContentPresenter x:Name="contentPresenter" 
                                                  Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="DarkBlue" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0F1E3A8A"/>
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="White"
                                    CornerRadius="8"
                                    BorderThickness="0"
                                    Effect="{StaticResource CardShadow}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border x:Name="headerBorder"
                                            Background="{StaticResource LightBackground}"
                                            CornerRadius="8,8,0,0"
                                            Padding="15,12">
                                        <ContentPresenter x:Name="HeaderContent"
                                                          ContentSource="Header"
                                                          RecognizesAccessKey="True"
                                                          HorizontalAlignment="Right"
                                                         />
                                    </Border>

                                    <ContentPresenter Grid.Row="1" 
                                                      Margin="15,15,15,20"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Effects -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="0" Color="#10000000" Direction="270"/>
        <DropShadowEffect x:Key="HeaderShadow" BlurRadius="10" ShadowDepth="2" Color="#20000000"/>

        <!-- Value Styles -->
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="ProfitTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        </Style>

        <!-- Icons -->
        <PathGeometry x:Key="FarmIcon">M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5a2.5 2.5 0 0 1 0-5 2.5 2.5 0 0 1 0 5z</PathGeometry>
        <PathGeometry x:Key="FactoryIcon">M22 21H2V3h4v4h2V3h4v4h2V3h4v4h2V3h2v18zM4 11h4v4H4v-4zm6 0h4v4h-4v-4zm6 0h4v4h-4v-4z</PathGeometry>
        <PathGeometry x:Key="TotalIcon">M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.31-8.86l-3.42 5.15 1.42 1.42 4.18-5.78 4.51 1.5 1.08-1.08-5.77-4.51z</PathGeometry>
        <PathGeometry x:Key="ProfitIcon">M12 8l-6 6 1.41 1.41L12 10.83l4.59 4.58L18 14l-6-6z</PathGeometry>
        <PathGeometry x:Key="NoteIcon">M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z</PathGeometry>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with gradient background -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="تسجيل عملية التوريد" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"/>
                </StackPanel>

                <Button x:Name="btnClose" 
                        Content="×" 
                        FontSize="24"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Width="40" Height="40"
                        FontWeight="Light"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Basic Information Card -->
                <GroupBox Grid.Row="0" Header="المعلومات الأساسية">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Date Section -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="التاريخ" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <DatePicker x:Name="CalendarControl"
                                      SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource WorkingDatePicker}"
                                       IsTodayHighlighted="True"
                                       SelectedDateFormat="Short"
                                       SelectedDateChanged="CalendarControl_SelectedDateChanged"/>
                        </StackPanel>

                        <!-- Truck Number -->
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="رقم العربية"/>
                            <TextBox x:Name="txtTruckNumber" 
                                     Text="{Binding TruckNumber, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasTruckNumberError}" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                <Setter Property="BorderThickness" Value="1.5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="{Binding TruckNumberError}" 
                                       Style="{StaticResource ErrorMessageStyle}"
                                       Visibility="{Binding HasTruckNumberError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                        </StackPanel>

                        <!-- Transport Price -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="سعر النقل النولون"/>
                            <TextBox x:Name="txtTransportPrice" 
                                     Text="{Binding TransportPrice, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasTransportPriceError}" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                <Setter Property="BorderThickness" Value="1.5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="{Binding TransportPriceError}" 
                                       Style="{StaticResource ErrorMessageStyle}"
                                       Visibility="{Binding HasTransportPriceError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Farm and Factory Data -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Farm Section -->
                    <GroupBox Grid.Column="0" Header="🌾 بيانات المزرعة" Margin="0,0,10,0">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Farm Name -->
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="اسم المزرعة" FontWeight="SemiBold"/>
                                <ComboBox x:Name="FarmName" 
                                         ItemsSource="{Binding Farms}"
                                         SelectedItem="{Binding SelectedFarm, Mode=TwoWay}"
                                         DisplayMemberPath="FarmName"
                                         IsEditable="True">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFarmNameError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                                <TextBlock Text="{Binding FarmNameError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFarmNameError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>

                            <!-- Farm Weight -->
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="الوزن عند المزرعة (كجم)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtFarmWeight" 
                                         Text="{Binding FarmWeight, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFarmWeightError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding FarmWeightError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFarmWeightError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>

                            <!-- Farm Discount Percentage -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="نسبة الخصم (%)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtFarmDiscount" 
                                         Text="{Binding FarmDiscountPercentage, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFarmDiscountError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding FarmDiscountError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFarmDiscountError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>

                            <!-- Farm Allowed Weight - AUTO CALCULATED -->
                            <StackPanel Grid.Row="3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="الوزن المسموح - " FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text="⚡ تلقائي" FontSize="11" FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Background="#E6F7F0" BorderBrush="{StaticResource AccentBrush}" 
                                        BorderThickness="2" CornerRadius="6" Padding="12,8">
                                    <Grid>
                                        <TextBlock Text="{Binding FarmAllowedWeight, Mode=OneWay, StringFormat={}{0:N2} كجم}" 
                                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                                   Foreground="{StaticResource AccentBrush}"/>
                                        <Border Background="{StaticResource AccentBrush}" CornerRadius="10" 
                                                Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Margin="-5,-5,0,0">
                                            <TextBlock Text="⚡" Foreground="White" HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center" FontSize="10"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <TextBlock Text="يتم حساب الوزن المسموح تلقائياً: الوزن - (الوزن × نسبة الخصم)" 
                                           FontSize="10" Foreground="{StaticResource TextSecondary}" 
                                           FontStyle="Italic" Margin="2,4,0,0"/>
                            </StackPanel>

                            <!-- Farm Price -->
                            <StackPanel Grid.Row="4">
                                <TextBlock Text="السعر لكل كيلو (جنيه)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtFarmPrice" 
                                        Text="{Binding FarmPrice, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFarmPriceError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding FarmPriceError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFarmPriceError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Factory Section -->
                    <GroupBox Grid.Column="1" Header="🏭 بيانات المصنع" Margin="10,0,0,0">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Factory Name -->
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="اسم المصنع" FontWeight="SemiBold"/>
                                <ComboBox x:Name="FactoryName" 
                                         ItemsSource="{Binding Factories}"
                                         SelectedItem="{Binding SelectedFactory, Mode=TwoWay}"
                                         DisplayMemberPath="FactoryName"
                                         IsEditable="True">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFactoryNameError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                                <TextBlock Text="{Binding FactoryNameError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFactoryNameError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>

                            <!-- Factory Weight -->
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="الوزن عند المصنع (كجم)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtFactoryWeight" 
                                         Text="{Binding FactoryWeight, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFactoryWeightError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding FactoryWeightError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFactoryWeightError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>

                            <!-- Factory Discount Percentage -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="نسبة الخصم (%)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtFactoryDiscount" 
                                         Text="{Binding FactoryDiscount, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFactoryDiscountError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding FactoryDiscountError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFactoryDiscountError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>

                            <!-- Factory Allowed Weight - AUTO CALCULATED -->
                            <StackPanel Grid.Row="3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="الوزن المسموح - " FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text="⚡ تلقائي" FontSize="11" FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Background="#E6F7F0" BorderBrush="{StaticResource AccentBrush}" 
                                        BorderThickness="2" CornerRadius="6" Padding="12,8">
                                    <Grid>
                                        <TextBlock Text="{Binding FactoryAllowedWeight, Mode=OneWay, StringFormat={}{0:N2} كجم}" 
                                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                                   Foreground="{StaticResource AccentBrush}"/>
                                        <Border Background="{StaticResource AccentBrush}" CornerRadius="10" 
                                                Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Margin="-5,-5,0,0">
                                            <TextBlock Text="⚡" Foreground="White" HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center" FontSize="10"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <TextBlock Text="يتم حساب الوزن المسموح تلقائياً: الوزن - (الوزن × نسبة الخصم)" 
                                           FontSize="10" Foreground="{StaticResource TextSecondary}" 
                                           FontStyle="Italic" Margin="2,4,0,0"/>
                            </StackPanel>

                            <!-- Factory Price -->
                            <StackPanel Grid.Row="4">
                                <TextBlock Text="السعر لكل كيلو (جنيه)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtFactoryPrice" 
                                         Text="{Binding FactoryPrice, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasFactoryPriceError}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding FactoryPriceError}" 
                                           Style="{StaticResource ErrorMessageStyle}"
                                           Visibility="{Binding HasFactoryPriceError, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>

                <!-- Totals Section - AUTO CALCULATED -->
                <GroupBox Grid.Row="2" Header="💰 الإجماليات - حسابات تلقائية">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding}" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource AccentBrush}"/>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="12" 
                                        Margin="10,0,0,0" Padding="8,3">
                                    <TextBlock Text="⚡ تلقائي" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Farm Total - AUTO CALCULATED -->
                        <Border Grid.Column="0" 
                                Background="{StaticResource LightBackground}" 
                                CornerRadius="8"
                                Padding="20,15"
                                Margin="0,0,10,0"
                                BorderBrush="{StaticResource SecondaryBrush}"
                                BorderThickness="2">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Path Data="{StaticResource FarmIcon}" 
                                          Fill="{StaticResource SecondaryBrush}" 
                                          Width="18" Height="18"
                                          Margin="0,0,5,0"/>
                                    <TextBlock Text="إجمالي المزرعة" 
                                               Foreground="{StaticResource TextSecondary}"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock x:Name="txtFarmTotal" 
                                           Text="{Binding FarmTotal, Mode=OneWay, StringFormat={}{0:C}}" 
                                           Style="{StaticResource ValueTextStyle}"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Factory Total - AUTO CALCULATED -->
                        <Border Grid.Column="1" 
                                Background="{StaticResource LightBackground}" 
                                CornerRadius="8"
                                Padding="20,15"
                                Margin="10,0"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                BorderThickness="2">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Path Data="{StaticResource FactoryIcon}" 
                                          Fill="{StaticResource PrimaryBrush}" 
                                          Width="18" Height="18"
                                          Margin="0,0,5,0"/>
                                    <TextBlock Text="إجمالي المصنع" 
                                               Foreground="{StaticResource TextSecondary}"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock x:Name="txtFactoryTotal" 
                                           Text="{Binding FactoryTotal, Mode=OneWay, StringFormat={}{0:C}}" 
                                           Style="{StaticResource ValueTextStyle}"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Profit Margin - AUTO CALCULATED -->
                        <Border Grid.Column="2" 
                                Background="#E6F7F0" 
                                CornerRadius="8"
                                Padding="20,15"
                                Margin="10,0,0,0"
                                BorderBrush="{StaticResource AccentBrush}"
                                BorderThickness="3">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Path Data="{StaticResource ProfitIcon}" 
                                          Fill="{StaticResource AccentBrush}" 
                                          Width="20" Height="20"
                                          Margin="0,0,5,0"/>
                                    <TextBlock Text="هامش الربح" 
                                               Foreground="{StaticResource TextSecondary}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <TextBlock x:Name="txtProfitMargin" 
                                           Text="{Binding ProfitMargin, Mode=OneWay, StringFormat={}{0:C}}" 
                                           Style="{StaticResource ProfitTextStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="= إجمالي المصنع - (المزرعة + النولون)" 
                                           FontSize="10"
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Notes Section -->
                <GroupBox Grid.Row="3" Header="ملاحظات">
                    <TextBox x:Name="txtNotes" 
                             Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             Height="120"
                             Style="{StaticResource ModernTextBox}"
                             VerticalContentAlignment="Top"/>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="White" Padding="15" Effect="{StaticResource HeaderShadow}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" 
                        Content="حفظ البيانات"
                        Width="180"
                        Background="{StaticResource AccentBrush}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderThickness="0"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Border x:Name="hoverOverlay" 
                                            Background="White" 
                                            CornerRadius="8"
                                            Opacity="0"/>
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="10">
                                        <Path Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z" 
                                              Fill="White"
                                              Width="20" Height="20"
                                              Margin="0,0,10,0"/>
                                        <ContentPresenter x:Name="contentPresenter" 
                                                          VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.2"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="Green" Opacity="0.5"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0E10B981"/>
                                    <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnClear" 
                        Content="مسح النموذج"
                        Width="180"
                        Margin="20,0"
                        Background="{StaticResource TextSecondary}"/>

                <Button x:Name="btnCloseBottom" 
                        Content="إلغاء"
                        Width="120"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondary}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
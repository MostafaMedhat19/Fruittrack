<Page x:Class="Fruittrack.SupplyRecordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fruittrack"
        mc:Ignorable="d"
        Title="تسجيل عملية التوريد" 
        FontFamily="Segoe UI"
        FontSize="16"
        Background="White">

    <Page.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E3A8A"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="LightBackground" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>

        <!-- Animations -->
        <Storyboard x:Key="HoverAnimation">
            <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Opacity" To="1"/>
        </Storyboard>

        <Storyboard x:Key="UnhoverAnimation">
            <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Opacity" To="0"/>
        </Storyboard>

        <!-- Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Focusable="False"/>
                                <Border x:Name="hoverEffect" 
                                        Background="{StaticResource PrimaryBrush}" 
                                        Opacity="0"
                                        CornerRadius="6"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.05"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton" 
                                                 
                                                  Grid.Column="2" 
                                                  Focusable="false"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"/>
                                    <ContentPresenter x:Name="ContentSite" 
                                                      IsHitTestVisible="False" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            <Border x:Name="hoverEffect" 
                                    Background="{StaticResource PrimaryBrush}" 
                                    Opacity="0"
                                    CornerRadius="6"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.05"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="border" 
                        Grid.ColumnSpan="2"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="6"/>
                <Path x:Name="arrow" 
                      Grid.Column="1" 
                      Fill="{StaticResource TextSecondary}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M0,0 L4,4 8,0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="arrow" Property="Fill" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="arrow" Property="Data" Value="M0,4 L4,0 8,4 Z"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Border x:Name="hoverOverlay" 
                                        Background="White" 
                                        CornerRadius="8"
                                        Opacity="0"/>
                                <ContentPresenter x:Name="contentPresenter" 
                                                  Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="DarkBlue" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0F1E3A8A"/>
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox" 
                                                   VerticalContentAlignment="Center"
                                                   Padding="12,10"
                                                   HorizontalContentAlignment="Right"
                                                   BorderThickness="0"/>
                                <Button x:Name="PART_Button" 
                                        Width="20"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,10,0"
                                       />
                                <Border x:Name="hoverEffect" 
                                        Background="{StaticResource PrimaryBrush}" 
                                        Opacity="0"
                                        CornerRadius="6"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.05"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                                <Setter TargetName="hoverEffect" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="CalendarButtonTemplate" TargetType="Button">
            <Grid>
                <Path x:Name="calendarIcon"
                      Fill="{StaticResource TextSecondary}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="calendarIcon" Property="Fill" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="White"
                                    CornerRadius="8"
                                    BorderThickness="0"
                                  >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border x:Name="headerBorder"
                                            Background="{StaticResource LightBackground}"
                                            CornerRadius="8,8,0,0"
                                            Padding="15,12">
                                        <ContentPresenter x:Name="HeaderContent"
                                                          ContentSource="Header"
                                                          RecognizesAccessKey="True"
                                                          HorizontalAlignment="Right"
                                                         />
                                    </Border>

                                    <ContentPresenter Grid.Row="1" 
                                                      Margin="15,15,15,20"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Effects -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="0" Color="#10000000" Direction="270"/>
        <DropShadowEffect x:Key="HeaderShadow" BlurRadius="10" ShadowDepth="2" Color="#20000000"/>

        <!-- Value Styles -->
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="ProfitTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        </Style>

        <!-- Icons -->
        <PathGeometry x:Key="FarmIcon">M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5a2.5 2.5 0 0 1 0-5 2.5 2.5 0 0 1 0 5z</PathGeometry>
        <PathGeometry x:Key="FactoryIcon">M22 21H2V3h4v4h2V3h4v4h2V3h4v4h2V3h2v18zM4 11h4v4H4v-4zm6 0h4v4h-4v-4zm6 0h4v4h-4v-4z</PathGeometry>
        <PathGeometry x:Key="TotalIcon">M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.31-8.86l-3.42 5.15 1.42 1.42 4.18-5.78 4.51 1.5 1.08-1.08-5.77-4.51z</PathGeometry>
        <PathGeometry x:Key="ProfitIcon">M12 8l-6 6 1.41 1.41L12 10.83l4.59 4.58L18 14l-6-6z</PathGeometry>
        <PathGeometry x:Key="NoteIcon">M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z</PathGeometry>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with gradient background -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    
                    <TextBlock Text="تسجيل عملية التوريد" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"/>
                </StackPanel>

                <Button x:Name="btnClose" 
                        Content="×" 
                        FontSize="24"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Width="40" Height="40"
                        FontWeight="Light"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Basic Information Card -->
                <GroupBox Grid.Row="0" Header="المعلومات الأساسية">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <!-- عنوان التاريخ -->
                            <TextBlock Text="التاريخ"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>       

                            <!-- إطار يحتوي على الـ Calendar -->
                            <Border Background="White"
                                CornerRadius="12"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1.5"
                                Padding="12"
                                        >       
                                <Grid>
                                    <Calendar x:Name="CalendarControl"
                                      SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      BorderThickness="0"
                                      Background="White"
                                      DisplayDateStart="{x:Static sys:DateTime.Today}"
                                      Margin="0"
                                      />    
                                </Grid>
                            </Border>
                        </StackPanel>



                        <!-- Truck Number -->
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="رقم العربية"/>
                            <TextBox x:Name="txtTruckNumber" Text="{Binding TruckNumber}" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Transport Price -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="سعر النقل النولون"/>
                            <TextBox x:Name="txtTransportPrice" Text="{Binding TransportPrice}" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Farm and Factory Data -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Farm Section -->
                    <GroupBox Grid.Column="0" Header="بيانات المزرعة" Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Farm Name -->
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="اسم المزرعة"/>
                                <TextBox x:Name="FarmName" Text="{Binding Text}" Style="{StaticResource ModernTextBox}" />
                            </StackPanel>

                            <!-- Farm Weight -->
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="الوزن عند المزرعة "/>
                                <TextBox x:Name="txtFarmWeight" 
                                         Text="{Binding FarmWeight, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Farm Discount -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="نسبة الخصم (%)"/>
                                <TextBox x:Name="txtFarmDiscount" 
                                         Text="{Binding FarmDiscountPercentage, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Farm Allowed Weight -->
                            <StackPanel Grid.Row="3">
                                <TextBlock Text="الوزن المسموح "/>
                                <TextBlock x:Name="txtFarmAllowedWeight" 
                                           Text="{Binding FarmAllowedWeight, Mode=OneWay}" 
                                           Style="{StaticResource ValueTextStyle}"/>
                            </StackPanel>

                            <!-- Farm Price -->
                            <StackPanel Grid.Row="4">
                                <TextBlock Text="السعر لكل كيلو"/>
                                <TextBox x:Name="txtFarmPrice" 
                                         Text="{Binding FarmPricePerTon, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Factory Section -->
                    <GroupBox Grid.Column="1" Header="بيانات المصنع" Margin="10,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Factory Name -->
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="اسم المصنع"/>
                                <TextBox x:Name="FactoryName" Text="{Binding Text}" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Factory Weight -->
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="الوزن عند المصنع"/>
                                <TextBox x:Name="txtFactoryWeight" 
                                         Text="{Binding FactoryWeight, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Factory Discount -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="نسبة الخصم (%)"/>
                                <TextBox x:Name="txtFactoryDiscount" 
                                         Text="{Binding FactoryDiscountPercentage, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Factory Allowed Weight -->
                            <StackPanel Grid.Row="3">
                                <TextBlock Text="الوزن المسموح "/>
                                <TextBlock x:Name="txtFactoryAllowedWeight" 
                                           Text="{Binding FactoryAllowedWeight, Mode=OneWay}" 
                                           Style="{StaticResource ValueTextStyle}"/>
                            </StackPanel>

                            <!-- Factory Price -->
                            <StackPanel Grid.Row="4">
                                <TextBlock Text="السعر لكل كيلو"/>
                                <TextBox x:Name="txtFactoryPrice" 
                                         Text="{Binding FactoryPricePerTon, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>

                <!-- Totals Section -->
                <GroupBox Grid.Row="2" Header="الإجماليات">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Farm Total -->
                        <Border Grid.Column="0" 
                                Background="{StaticResource LightBackground}" 
                                CornerRadius="8"
                                Padding="20,15"
                                Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="إجمالي المزرعة" 
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFarmTotal" 
                                           Text="{Binding FarmTotal, Mode=OneWay, StringFormat={}{0:C}}" 
                                           Style="{StaticResource ValueTextStyle}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Factory Total -->
                        <Border Grid.Column="1" 
                                Background="{StaticResource LightBackground}" 
                                CornerRadius="8"
                                Padding="20,15"
                                Margin="10,0">
                            <StackPanel>
                                <TextBlock Text="إجمالي المصنع" 
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFactoryTotal" 
                                           Text="{Binding FactoryTotal, Mode=OneWay, StringFormat={}{0:C}}" 
                                           Style="{StaticResource ValueTextStyle}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Profit Margin -->
                        <Border Grid.Column="2" 
                                Background="#E6F7F0" 
                                CornerRadius="8"
                                Padding="20,15"
                                Margin="10,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="هامش الربح" 
                                               Foreground="{StaticResource TextSecondary}"
                                               Margin="0,0,5,0"/>
                                    <Path Data="{StaticResource ProfitIcon}" 
                                          Fill="{StaticResource AccentBrush}" 
                                          Width="18" Height="18"/>
                                </StackPanel>
                                <TextBlock x:Name="txtProfitMargin" 
                                           Text="{Binding ProfitMargin, Mode=OneWay, StringFormat={}{0:C}}" 
                                           Style="{StaticResource ProfitTextStyle}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Notes Section -->
                <GroupBox Grid.Row="3" Header="ملاحظات">
                    <TextBox x:Name="txtNotes" 
                             Text="{Binding Notes}" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             Height="120"
                             Style="{StaticResource ModernTextBox}"
                             VerticalContentAlignment="Top"/>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="White" Padding="15" Effect="{StaticResource HeaderShadow}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" 
                        Content="حفظ البيانات"
                        Width="180"
                        Background="{StaticResource AccentBrush}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderThickness="0"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Border x:Name="hoverOverlay" 
                                            Background="White" 
                                            CornerRadius="8"
                                            Opacity="0"/>
                                    <StackPanel Orientation="Horizontal" 

<Page x:Class="Fruittrack.FactoryReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      FlowDirection="RightToLeft"
      Title="كشف مصنع">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="من" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding FromDate}" Width="150"/>
            <TextBlock Text="إلى" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <DatePicker SelectedDate="{Binding ToDate}" Width="150"/>
            <Button Content="تحديث" Command="{Binding RefreshCommand}" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Grid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="رقم العربية" Binding="{Binding TruckNumber}" Width="120"/>
                <DataGridTextColumn Header="اسم المصنع" Binding="{Binding FactoryName}" Width="*"/>
                <DataGridTextColumn Header="الوزن" Binding="{Binding Weight, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="نسبة الخصم" Binding="{Binding DiscountPercent, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="الوزن الفعلي" Binding="{Binding AllowedWeight, StringFormat=N2}" Width="140"/>
                <DataGridTextColumn Header="السعر لكل كيلو" Binding="{Binding PricePerKilo, StringFormat=N2}" Width="140"/>
                <DataGridTextColumn Header="إجمالي المصنع" Binding="{Binding FactoryTotal, StringFormat=N2}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Totals -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="20,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="الوزن الإجمالي:"/>
            <TextBlock Text="{Binding FormattedTotalWeight}" FontWeight="Bold"/>
            <TextBlock Text="الوزن الصافي:" Margin="20,0,0,0"/>
            <TextBlock Text="{Binding FormattedTotalAllowedWeight}" FontWeight="Bold"/>
            <TextBlock Text="إجمالي حساب المصنع:" Margin="20,0,0,0"/>
            <TextBlock Text="{Binding FormattedTotalFactoryAmount}" FontWeight="Bold"/>
            <TextBlock Text="إجمالي المستلم:" Margin="20,0,0,0"/>
            <TextBlock Text="{Binding FormattedTotalReceived}" FontWeight="Bold"/>
            <TextBlock Text="الصافي:" Margin="20,0,0,0"/>
            <TextBlock Text="{Binding FormattedNetAmount}" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>


<Page x:Class="Fruittrack.TechnicalSupportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fruittrack"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TechnicalSupportPage">

    <Page.Resources>
        <!-- Classical Style Resources -->
        <LinearGradientBrush x:Key="HeaderBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF3A3A3A" Offset="0"/>
            <GradientStop Color="#FF1E1E1E" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF555555"/>
        <SolidColorBrush x:Key="LinkBrush" Color="#FF0066CC"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF999999"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource LinkBrush}"/>
            <Setter Property="TextDecorations" Value="Underline"/>
        </Style>
    </Page.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
            Background="White" CornerRadius="5"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Padding="20" Margin="20">
        <StackPanel Width="500">
            <!-- Header -->
            <Border Background="{StaticResource HeaderBackground}" CornerRadius="3" Padding="10" Margin="0,0,0,15">
                <TextBlock Text="About the Developers" 
                           FontSize="18" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Description -->
            <TextBlock TextAlignment="Center" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,15">
                This application was developed by 
                  <Hyperlink NavigateUri="https://github.com/hasan-elbadry" 
            RequestNavigate="Hyperlink_RequestNavigate" 
            Cursor="Hand">
      Hasan Ayman El-Badry
  </Hyperlink>.
              
                and
                <Hyperlink NavigateUri="https://github.com/MostafaMedhat19" 
            RequestNavigate="Hyperlink_RequestNavigate" 
            Cursor="Hand">
      Mostafa Medhat Mostafa
  </Hyperlink>
                If you encounter any issues, please contact our technical support:
            </TextBlock>

            <!-- Contact Methods -->
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="0,10">
                <StackPanel Margin="10,5,0,0">
                    <TextBlock FontSize="13" Margin="0,3"><Run FontSize="15" Text="📞"/><Run Text=" "/><Run Text="Phone:"/><Run Text=" "/><Run Text="+20 1124370080"/></TextBlock>
                    <TextBlock FontSize="13" Margin="0,3"><Run FontSize="15" Text="💬"/><Run Text=" "/><Run Text="WhatsApp:"/><Run Text=" "/><Run Text="+20 1101099035"/><LineBreak/><Run/></TextBlock>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <TextBlock TextAlignment="Center" FontSize="12" Margin="0,15,0,0" FontStyle="Italic">
                © 2025 All Rights Reserved
            </TextBlock>
        </StackPanel>
    </Border>
</Page>
